<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <apibridgepimcore translate="label">
            <label>Api bridge pimcore</label>
            <sort_order>100</sort_order>
        </apibridgepimcore>
    </tabs>
    <sections>
        <tab1 translate="label" module="adminhtml">
            <label>Settings</label>
            <tab>apibridgepimcore</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <general translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>

                    <fields>
                        <pimcorehost translate="label">
                            <label>Pimcore host</label>
                            <comment>example: http://pimcore.local</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </pimcorehost>
                        <pimcoreapikey translate="label">
                            <label>Pimcore api user key</label>
                            <comment>example: 2533a825ab28e1e0fcaa0660128f</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </pimcoreapikey>
                        <apicommandlist translate="label">
                            <label>Pimcore api command list</label>
                            <comment>List available api commands</comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>OleksandrMakhno_ApiBridgePimcore/options</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apicommandlist>
                    </fields>
                </general>
            </groups>
        </tab1>
    </sections>
</config>
